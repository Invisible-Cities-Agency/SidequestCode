{
  "name": "@sidequest/code-quality-orchestrator",
  "version": "0.1.0-alpha.2",
  "description": "Configuration-agnostic TypeScript and ESLint orchestrator that respects your project's setup with real-time watch mode",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "code-quality-orchestrator": "dist/cli.js",
    "sidequest": "dist/cli.js",
    "cqo": "dist/cli.js"
  },
  "scripts": {
    "prepare": "echo 'Skipping build for now'",
    "build": "tsc",
    "dev": "tsx cli.ts",
    
    "sidequest": "tsx cli.ts --verbose --skip-setup",
    
    "sidequest:watch": "tsx cli.ts --watch",
    "sidequest:watch:eslint": "tsx cli.ts --watch --include-eslint",
    "sidequest:watch:strict": "tsx cli.ts --watch --strict",
    
    "sidequest:analyze": "tsx cli.ts",
    "sidequest:analyze:eslint": "tsx cli.ts --include-eslint",
    "sidequest:analyze:strict": "tsx cli.ts --strict",
    
    "sidequest:report": "tsx cli.ts --verbose --skip-setup",
    "sidequest:report:eslint": "tsx cli.ts --verbose --skip-setup --include-eslint",
    "sidequest:report:strict": "tsx cli.ts --verbose --skip-setup --strict",
    
    "sidequest:config": "tsx cli.ts --config",
    "sidequest:config:show": "tsx cli.ts --config show",
    "sidequest:config:edit": "tsx cli.ts --config edit",
    "sidequest:config:reset": "tsx cli.ts --config reset",
    
    "sidequest:help": "tsx cli.ts --help",
    "sidequest:help:markdown": "tsx cli.ts --help-markdown",
    "sidequest:help:quick": "tsx cli.ts --help-quick",
    "sidequest:ai-context": "tsx cli.ts --ai-context",
    
    "sidequest:prd": "tsx cli.ts --prd",
    "sidequest:debug:terminal": "tsx cli.ts --debug-terminal",
    "sidequest:session:reset": "tsx cli.ts --reset-session",
    "test": "NODE_OPTIONS='--no-warnings' vitest run --config vitest.config.ts --reporter=verbose",
    "test:core": "NODE_OPTIONS='--no-warnings' vitest run '.vitest/core/**/*.test.{mjs,ts}' --reporter=verbose",
    "test:edge": "NODE_OPTIONS='--no-warnings' vitest run '.vitest/edge/**/*.test.mjs' --reporter=verbose",
    "test:integration": "NODE_OPTIONS='--no-warnings' vitest run '.vitest/integration/**/*.test.{mjs,ts}' --reporter=verbose",
    "test:watch": "vitest '.vitest/core/**/*.test.{mjs,ts}'",
    "test:watch:edge": "vitest '.vitest/edge/**/*.test.mjs'",
    "test:coverage": "NODE_OPTIONS='--no-warnings' vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:ci": "NODE_OPTIONS='--no-warnings' vitest run --reporter=json --outputFile=./test-results.json",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "types:unused": "ts-unused-exports tsconfig.json --showLineNumber",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run format && npm run build && npm run test && npm run typecheck",
    "alpha-release": "npm version prerelease --preid=alpha && npm publish --tag alpha",
    "beta-release": "npm version prerelease --preid=beta && npm publish --tag beta"
  },
  "keywords": [
    "typescript",
    "eslint",
    "code-quality",
    "configuration-agnostic",
    "tsconfig",
    "orchestrator",
    "watch-mode",
    "terminal",
    "cli",
    "developer-tools",
    "real-time",
    "violations",
    "linting",
    "compilation"
  ],
  "author": {
    "name": "Ian Armstrong",
    "email": "sidequest@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isarmstrong/SideQuestCode.git"
  },
  "bugs": {
    "url": "https://github.com/isarmstrong/SideQuestCode/issues"
  },
  "homepage": "https://github.com/isarmstrong/SideQuestCode#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "better-sqlite3": "^9.0.0",
    "kysely": "^0.27.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-unicorn": "^50.0.0",
    "prettier": "^3.0.0",
    "ts-unused-exports": "^11.0.1",
    "tsx": "^4.0.0",
    "type-fest": "^4.10.0",
    "typescript": "^5.8.3",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "typescript": ">=4.5.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/isarmstrong"
  }
}
